// lightbox styles

/* Light Box Styles */


	#lightbox {

	    width: 100%;
	    height: 100%;
	    position: fixed;
	    left: 0; top: 0;
	    z-index: 2000;
	    overflow: hidden;
	    display: none;
	}

	.lightbox_dim {
	    width: 100%;
	    height: 100%;
	    position: fixed;
	    top: 0; left: 0;
	    opacity: 0;
			background: url(<%= asset_path "broken_noise.png" %>);
    	
	}

.splash_container {
	background-color: rgba(0,0,0,0.9);
	height: 400px;
	width: 600px;
	margin: auto;
	margin-top: 100px;
	position: relative;
	padding:10px;
	border: 10px solid black;
	overflow: hidden;

	.splash_button, .action_button {
		padding: 10px;
		background-color: rgba(120,230,120,1);
		color: white;
		margin-top:15px;
		text-align:center;
	}

	.blah {
		width:100%;
		position: relative
	}

	.item_constraint {
		width: 500px;
		
		position: relative;
		margin: auto;

		.item_details, .item_stats {
			margin-top:10px;
			background-color: white;
			padding: 20px;
			text-align: center;
			width: 200px;
			display: inline-block;
			vertical-align: top;
		}
		.item_details {
			margin-right: 20px;
		}
	}
}

.intro_scene_panel {
	background-image: url(<%= asset_path "hometown_splash.png" %>);
	opacity: 0.6;
}

.intro_scene_panel, .intro_welcome_panel, .intro_danger_panel, .intro_shop_panel, .intro_home_panel, .intro_done_panel {
	position: absolute;
	top: 10px; left: 10px; right: 10px; bottom: 10px;
	display: inline-block;
}

.intro_welcome_panel {
	background-color: white;
	top: 100px; left: 100px; right: 100px; bottom: 100px;
	padding:40px;
	text-align: center;

	h3 {
		padding:5px;
		background-color: rgba(60,60,60,1);
		color: white;
		margin-bottom: 15px;
	}

}

.intro_danger_panel, .intro_home_panel, .intro_done_panel, .intro_shop_panel {
	background-color: white;
	top: 40px; left: 100px; right: 100px;
	height: 120px;
	padding:20px;
	text-align: center;
	display: none;
	opacity: 0;

	h3 {
		padding:5px;
		background-color: rgba(60,60,60,1);
		color: white;
		margin-bottom: 15px;
	}

}

.intro_shop_panel {
	height: 160px;
}

.intro_done_panel {
	height: 110px;
}

.intro_home_panel {
	height: 130px;
}

// areas

.map_container {
	width: 900px;
	height: 600px;
	background-color: rgba(220,230,255,1);
	margin: auto;
	position: relative;
}

.area_object {
	position: absolute;
}

// inventory / items styles

.item_splash_panel {
	background-color: $color_light_shadow;
	position: absolute;
	top: 10px; left: 10px; bottom: 10px; right: 10px;
	overflow-y: auto;
}

.store_welcome {

	margin-bottom:15px;

	background: $color_header;
	
	img, .welcome_message {
		display: inline-block;
		vertical-align: top;
	}

	.welcome_message {

		h2 {
			margin-bottom:10px;
		}

	background: $color_light_shadow;

		width: 720px;
		height: 120px;
		margin:20px;
		padding:20px;

		p {
			
		}
	}
}

.inventory_container {

	background-color: $color_light_shadow;

	.item_card {
		width: 160px;
		height: 180px;
		margin: 5px;
		background-color: white;
		padding:10px;
		text-align: center;
		display: inline-block;
		vertical-align: top;
		postion: relative;

		a {
			color: black;
		}
		
		.item_description, .buy_item {
			background-color: rgba(220,220,220,1);
			height:45px;
			padding: 5px;
			overflow: auto;

		}

		.buy_item:hover {
			background-color: rgba(160,220,160,1);
		}
	}
}

// character styles

.character_container {

	background_color: $color_light_shadow;
	position: relative;
	

	.avatar_display {
		margin-top: 4px;
		height: 220px;
		width: 220px;
		background-color: rgba(100,100,100,0.8);
		display: inline-block;
		vertical-align: top;
	}

	.stats_table {
		display: inline-block;
		vertical-align: top;

	}
}



// scroll styles

::-webkit-scrollbar {
		width: 15px; }
	::-webkit-scrollbar-track {
		background-color: rgba(0,0,0,0.5); }
	::-webkit-scrollbar-thumb {
		background-color: rgba(100,210,200,0.4);}
	::-webkit-scrollbar-thumb:hover {
		background-color: rgba(100,210,200,0.5);}
	::-webkit-scrollbar-thumb:active {
		background-color: rgba(100,210,200,0.7);}

