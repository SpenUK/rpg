// Common Variables

$font_stack: "ubuntu", sans-serif;

$color_header: rgba(60,60,60,1);
$color_bg: rgba(220,80,80,1);
$color_shadow: rgba(0,0,0,0.7);
$color_light_shadow: rgba(255,255,255,0.7);

$color_alert: rgba(180,100,100,0.7);
$color_notice: rgba(100,180,100,0.7);
$color_message: rgba(160,160,100,0.7);
$color_off_white: rgba(255,252,240,1);

$color_font_1: rgba(100,210,200,1);

$color_panel_header: $color_header;
$color_panel_body: rgba(245,240,235,1);

$header_height: 50px;




// Fix browser shit

* { margin: 0px; padding: 0px; font-family: $font_stack}
html { height: 100%; }
body { height: 100%; background: $color_bg }
a {text-decoration: none;}
div {display: block;}
ul { list-style: none; }

// flash styles
.flash {
	#notice {
	border-radius: 10px;
	background-color: $color_notice;
	position: relative;
	display: inline-block;
	margin: auto; 
	}

	#alert {
	border-radius: 10px;
	background-color: $color_alert;
	position: relative;
	display: inline-block;
	margin: auto; 
	}
}

// Header Styles
.user_admin_header, .messages_header, .user_fix, .messages_fix {
	height: 230px;
	display: none;
}

.header_fix {
	height: 50px;
}

.header_icon {
	opacity: 0.6;

	display: inline-block;
	float: left;
	margin: 0px 5px;
	position: relative;
	height: 30px;
	width: 30px;
	text-align: center;
}

.header_icon:hover {
	opacity: 0.8;
}

.settings_block {
 background: url(<%= asset_path "cog.png" %>);
}

.messages_block {
	background: url(<%= asset_path "messages.png"%>);
}

.inventory_block {
 background: url(<%= asset_path "inventory.png" %>);
}

.map_block {
	background: url(<%= asset_path "map_icon.png"%>);
}


.messages_block p {
	// position:absolute;
	color: red;
}

.header {
	position: relative;
	width: 100%;
	
	background: $color_header;
}

.main_header {
	height: $header_height;
}

.navbar {
	position: relative;
	top: 0;
	height: 50px;
	float: right;
}

.header_wrap {
	position: fixed;
	width: 100%;
	top: 0px;
	left: 0px;
	z-index: 1000;
	background: $color_header;
}

.header ul {
	float: right;
}

.nav {
	display: inline-block;
	float: right;
	position: relative;
	padding: 10px 0px;
}

.nav p {
	line-height: 30px;
}

.navlinks, .logo h2, .login_out {
	line-height: 30px;
	font-size: 20px;
}

.logo {
	display: inline-block;
	position: relative;
	padding: 10px;
	color: rgba(100,210,200,1);
}
.logo:hover {
	color: white;
}

.navlinks a:hover{
	color: white;
}

.nav li, .nav li a, .balance {
	display: inline-block;
	float: left;
	margin: 0px 5px;
	position: relative;
	/*color: rgba(10,180,170,1);*/
	color: rgba(120,122,118,1);
}


/*Wrapper/Container Styles*/

.flash {
	background: rgba(100,100,100,0.7);
	color: white;
}

.page_wrap {
	padding-top: 10px;
	min-height: 100%;
	position: relative;
	/*background: rgba(0,0,100,0.2);*/
}

.container {
	margin: 0 auto;
	width: 1000px;
	position: relative;
}

.content {
	margin-bottom: 10px;
	margin-top: 200px;
}

.header_stripe {
	position: absolute;
	width: 100%;
	height:3px;
	background-color: black;
	bottom: 0;
}

.character_display_panel, .character_options_panel, .user_options_panel, .messages_panel, .message_filter{
	display: inline-block;
	position: relative;
	vertical-align: top;
	margin-top: 10px;
}

.user_options_panel {

	float: right;

	a {
		color: black;
	}

	ul {
	width: 200px;
	
		li {
			background: $color_light_shadow;
			border: 2px solid $color_shadow;
			padding:5px 10px;

		}

		li:first-child {
			margin-top: 0px;
		}

		li:hover {
			background: rgba(220,220,220,1);
		}
	}
}

// character panel styles

.character_display_panel {

	background-color: $color_light_shadow;
	padding: 5px 10px 10px 10px;
	margin-right: 10px;

	.avatar_display {
		margin-top: 4px;
		height: 160px;
		width: 160px;
		background-color: rgba(255,180,180,0.8);
	}

	h3 {
		color: $color_header;
	}

	.selection_p {
		color: $color_bg;
	}
}

.character_options_panel {

	background-color: $color_light_shadow;
	padding: 5px 10px 10px 10px;
	margin-right: 10px;


	h3 {
		color: $color_header;
	}

	.selection_p {
		color: $color_bg;
	}
}


// messages

.message_filter {
	float:left;
	margin-right: 10px;
	width: 180px;

	ul {
	width: 180px;
	color: black;

		a {
			color: black;			
		}
	
		li {
			background: $color_light_shadow;
			border: 2px solid $color_shadow;
			padding:5px 10px;
		}

		li:first-child {
			margin-top: 0px;
		}

		li:hover {
			background: rgba(220,220,220,1);
		}
	}
}

.messages_panel {
	padding: 5px 5px 5px 5px;
	overflow-y: scroll;
	width: 770px;
	margin-right: 10px;
	float: right;
	height: 210px;

	background-color: $color_light_shadow;

	.message_panel {
		
		background-color: rgba(220,220,220,1);
		margin-bottom:5px;
		border: 2px solid $color_font_1;

		.message_summary {
			height: 20px;
			line-height: 20px;
			padding: 10px 10px 10px 10px;
		}
		.message_body {
			display: none;
			padding: 10px 10px 10px 10px;
			margin: 5px 10px 10px 10px;
			background-color: white;
		}

		.time_ago {
			float: right;
		}
	}

	.battle_req {
		border: 2px solid red;	
	}

	.sent {
		display: none;
	}

	.received {
	}

}

.accept_request, .decline_request {
	padding: 10px;
	color: white;
}

.accept_request {
	background-color: rgba(120,215,100,1)
}

.decline_request {
	background-color: rgba(255,100,100,1)
}



// listing styles

.battle_listing_panel {
	width: 100%;
	min-height: 60px;
	background: $color_panel_body;
	margin: 10px 0px;
	border-radius: 10px;
	position: relative

}

.arrow {
	position: absolute;
	right: 10px;
	bottom: 10px;
	opacity: 0.4;
}

.arrow:hover {
	opacity: 0.5;
}

/*form styles*/

hr {
	border:1px solid rgba(200,200,200,1);
	margin: 5px 10px
}

.center_form h2 {
	text-align: center;
}

.center_form {
	padding: 20px;
	margin: 0 auto;
	width: 340px;
	border-radius: 20px;
	background: rgba(250,250,250,1);
	border: 5px solid rgba(200,200,200,1);
}

form div input{
	border: 4px solid rgba(200,200,200,1);
	line-height: 20px;
	display: inline-block;
	border-radius: 5px;
}

form div label { 
display: inline-block;}

/*Footer Styles*/

.footer h4 {
	line-height: 80px;
	color: $color_font_1;
	text-align: center
}

.footer_fix {
	height: 100px;
}
.footer {
	position: absolute;
	height: 80px;
	width: 100%;
	background: $color_header;
	bottom: 0px;
}

