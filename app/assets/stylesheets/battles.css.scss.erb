$warning_yellow: rgba(200,190,60,1);
$warning_yellow_dim: rgba(120,110,0,1);

.hud_panel {

	$hp_total: rgba(180,50,50,0.4);
	$hp_current: rgba(180,50,50,1);
	$mp_total: rgba(50,180,200,0.4);
	$mp_current: rgba(50,180,200,1);
	$just_visable: rgba(255,255,255,0.1);
	$bar_height: 30px;

	$color_turn_block: rgba(45,45,45,1);
	$color_turn_container: rgba(45,45,45,1);
	

	overflow: hidden;
	height: 70px;
	left:0; right:0;
	z-index: 400;
	position: absolute;
	top: 0;
	display: inline-block;
	padding: 10px;

	.player_1_hud {

		background-color: $just_visable;
		padding:10px;

		display: inline-block;

		h4 {z-index: 380;
				 	line-height: $bar_height; 
				 	left: 10px; 
				 	color: rgba(40,40,40,0.8);
				 }
			h4, .hp_bar, .mp_bar { position: absolute; top:0; }

		.hp_container_bar {
			width: 450px;
			background-color: $hp_total;
			height: $bar_height;
			overflow: hidden;

			position:relative;

			.hp_bar {
				background-color: $hp_current;
				height: $bar_height;
				left: 0;
			}

		}

		.mp_container_bar {
			width: 450px;
			background-color: $mp_total;
			height: $bar_height;

			position:relative;

			.mp_bar {
				background-color: $mp_current;
				height: $bar_height;
				left: 0;
			}

		}

	}

	.player_2_hud {

		float: right;
		display: inline-block;

		background-color: $just_visable;
		padding:10px;

		h4 {z-index: 480;
				 	line-height: $bar_height; 
				 	right: 10px; 
				 	color: rgba(40,40,40,0.8);
				 }
			h4, .hp_bar, .mp_bar { position: absolute; top:0; }

		.hp_container_bar {
			width: 450px;
			background-color: $hp_total;
			height: $bar_height;

			position: relative;

			.hp_bar {
				background-color: $hp_current;
				height: $bar_height;
				right: 0;
			}

		}

		.mp_container_bar {
			background-color: $mp_total;
			height: $bar_height;


			position:relative;

			.mp_bar {
				width: 161px;
				background-color: $mp_current;
				height: $bar_height;
				right: 0;
			}

		}

	}
}


.player {
	height: 200px;
	width: 200px;
	display: inline-block;
	z-index: 390;
	position: absolute;
	bottom: 100px;
	text-align: center;
	border-radius: 10px;
}

.player_1 {
	left: 140px;
}
.player_2 {
	right: 140px;
	img {
		-webkit-transform: scaleX(-1);
	}
}

.background {
	width: 100%;
	height: 150px;
	top: 200px;
	position: absolute;
	background-image: url(bg_bush.png);
	z-index: 10;
	overflow: hidden;
}
.far-background {
	width: 100%;
	height: 270px;
	top: 0;
	position: absolute;
	background-image: url(trees_bg.png);
	z-index: 5;
}

.foreground {
	width: 100%;
	height: 120px;
	bottom: 0;
	position: absolute;
	background-image: url(foreground1.png);
	z-index: 550;
}

.arena_shadow {
	width: 590px;
	height: 29px;
	bottom: 90px;
	left: 205px;
	position: absolute;
	background-image: url(arenashadow.png);
	z-index: 50;
	opacity: 0.5;
}

.skills_panel {
	width: 280px;
	bottom: 10px;
	left: 330px;
	background-color: rgba(255,255,255,0.7);
	border: 1px solid gray;
	z-index: 560;
	position: absolute;
	text-align: center;
	padding: 20px;
}

.options_panel {

	font-weight: bold;
	color: #777;

	$c_button: white;
	$c_button_shade: rgba(140,140,140,1);

	$c_button_hover: rgba(245,245,230,1);
	$c_button_on: rgba(50,180,200,1);
	$c_button_hover_shade: rgba(130,130,70,1);
	$c_button_on_shade: rgba(0,100,110,1);

	$d_bar_height: 45px;

	width: 640px;
	bottom: 0;
	left: 170px;
	// background-color: rgba(255,255,255,0.7);
	z-index: 560;
	position: absolute;
	text-align: center;
	padding: 10px;

	.disabled {
		opacity: 0.6;
	}

	.attack_selection, .item_selection, .skill_dropdown, .aggression_dropdown, .go_button {
		display:inline-block;
		vertical-align: top;
		text-align: center;
		position: relative;
		line-height: $d_bar_height;
		height: $d_bar_height;
		background-color: white;
		border-radius: 5px;
		-moz-box-shadow: 0px 4px rgba(140,140,140,1);
		-webkit-box-shadow: 0px 4px rgba(140,140,140,1);
		box-shadow: 0px 4px rgba(140,140,140,1);
	}

	.attack_selection:after {
		content: "";
		position: absolute;
		opacity: 0.4;
		top: 0; bottom: 0; left: 0; right: 0;
		background-image: url(<%= asset_path "sword_icon.png" %>);
	}

	.item_selection:after {
		content: "";
		position: absolute;
		opacity: 0.4;
		top: 0; bottom: 0; left: 0; right: 0;
		background-image: url(<%= asset_path "potion_icon.png" %>);
	}

	.skills_container, .items_container, .aggression_container {
		display: none;

	}


	.go_button, .skill_dropdown, .aggression_dropdown {
		margin-left: 10px;
	}


	.attack_selection, .item_selection {
		width: $d_bar_height;
	}

	.off:hover {
		background-color: $c_button_hover;
		-moz-box-shadow: 0px 4px $c_button_hover_shade;
		-webkit-box-shadow: 0px 4px $c_button_hover_shade;
		box-shadow: 0px 4px $c_button_hover_shade;
	}

	.off:active, .on {
		background-color: $c_button_on;
		color: white;
		top: 3px;
		-moz-box-shadow: 0px 1px $c_button_on_shade;
		-webkit-box-shadow: 0px 1px $c_button_on_shade;
		box-shadow: 0px 1px $c_button_on_shade;
	}

	.go_button { 
		color: white;
		font-size: 1.1em;
		background-color: rgba(43,182,115,1);
		width: 140px;
		-moz-box-shadow: 0px 4px rgba(0,148,68,1);
		-webkit-box-shadow: 0px 4px rgba(0,148,68,1);
		box-shadow: 0px 4px rgba(0,148,68,1);
	}

	.go_button:active {
		top: 3px;
		-moz-box-shadow: 0px 1px rgba(0,148,68,1);
		-webkit-box-shadow: 0px 1px rgba(0,148,68,1);
		box-shadow: 0px 1px rgba(0,148,68,1);
	}

	//drop down specific

	.skill_dropdown, .aggression_dropdown {
		width: 180px;

		.label {
			width: 100%;
			display: inline-block;
		}

		.skills_container, .items_container, .aggression_container {

			width: 380px;
			position: absolute;
			bottom: 100%;
			margin-bottom: 9px;

			ul {
				width: 395px;
				
				li {
					width: 180px;
					height: $d_bar_height;
					background-color: white;
					margin-top: 4px;
					margin-bottom: 4px;
					margin-right: 15px;
					border-radius: 5px;
					display: inline-block;
					float: left;

					-moz-box-shadow: 0px 4px rgba(140,140,140,1);
					-webkit-box-shadow: 0px 4px rgba(140,140,140,1);
					box-shadow: 0px 4px rgba(140,140,140,1);
				}

				li:active {
					margin-top: 6px;
					margin-bottom: 2px;
					-moz-box-shadow: 0px 2px rgba(140,140,140,1);
					-webkit-box-shadow: 0px 2px rgba(140,140,140,1);
					box-shadow: 0px 2px rgba(140,140,140,1);
				}

			}
		}
	}

		.skill_options li, .item_options li, .aggression_options li{
			color: rgba(140,140,140,1);
			left:0; right: 0;
			border-radius: inhert;
			left: 0; right: 0;
			height: $d_bar_height;
			background-color: inherit;
		}
}

.arena {
	width: 1000px;
	height: 480px;
	margin: auto;
	background-color: rgba(86,114,51,1);
	position: relative;

	.player2_effect_container{
		top: 150px;
		left: 620px;
	}

	.player1_effect_container {
		top: 150px;
		left: 100px;
	}

	.waiting_container{
		position:absolute;
		left:0; right: 0; top:0; bottom: 0;
		z-index: 400;
		pointer-events: none;
		padding-top: 140px;
		text-align: center;
		color: #b4b4b4;
		display:none;

		.waiting {
			
			position: relative;
			margin: 0px auto;
			display:inline-block;

			img {
				margin: auto;
				opacity: 0.3;
			}

			h4 {
				background-color: rgba(45,45,45,1);
				padding: 15px;
				border-radius: 15px;
				border: 3px solid rgba(25,25,25,1);

			}
		}
	}

	.player2_effect_container, .player1_effect_container {
		display: inline-block;
		width: 280px;
		// background-color: rgba(222,222,0,0.3);
		height: 120px;
		position: absolute;
		z-index: 400;
		font-size: 4.2em;
		font-weight: bold;
		text-align: center;

		.hit_mark {
			position:relative;
			width:100%;
			color: rgba(245,190,120,1);
			-webkit-text-stroke: 4px rgba(225,100,60,1);
			bottom: 0;
			padding: 10px;
			opacity: 0;
		}
		.heal_mark {
			position:absolute;
			width:100%;
			color: rgba(255,160,160,1);
			-webkit-text-stroke: 4px rgba(225,100,100,1);
			bottom: 0px;
			padding: 10px;
			opacity: 0;
		}
		.critical_hit {
			color: rgba(235,80,80,1);
			-webkit-text-stroke: 4px rgba(200,60,60,1);
		}
	}




}

.outcome {
	width: 300px;
	height: 320px;
	background-color: rgba(255,255,255,0.9);
	border: 4px solid gray;
	padding:20px;
	border-radius: 15px;
	z-index: 400;
	position: relative;
	margin: auto;
	top: 20px;

	h1 {
		text-align: center;
	}

	a {
		div {
		padding: 10px 20px;
		background-color: rgba(120,230,120,1);
		display: inline-block;
		margin: auto;
		position:relative;
		}
		color: rgba(255,255,255,0.9);
	}

	.button {
		height:30px;
		width: 100px;
		margin: auto;
		position: relative;
	}

}

//turn styles

.turn_container {
	max-height: 300px;
	overflow-y: auto;
	margin: 20px 100px;
	background-color: rgba(45,45,45,1);
	color: rgba(180,180,180,1);

	.turn_fade {
		position: absolute;
		top: 0; bottom: 0; left: 0; right: 0;
		background: -moz-linear-gradient(top,  rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 10%, rgba(0,0,0,0) 70%, rgba(0,0,0,0.6) 90%, rgba(0,0,0,1) 100%);
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.7)), color-stop(30%,rgba(0,0,0,0)), color-stop(70%,rgba(0,0,0,0)), color-stop(90%,rgba(0,0,0,0.6)), color-stop(100%,rgba(0,0,0,1)));
		background: -webkit-linear-gradient(top,  rgba(0,0,0,0.7) 0%,rgba(0,0,0,0) 30%,rgba(0,0,0,0) 70%,rgba(0,0,0,0.6) 90%,rgba(0,0,0,1) 100%);
		background: -o-linear-gradient(top,  rgba(0,0,0,0.7) 0%,rgba(0,0,0,0) 10%,rgba(0,0,0,0) 70%,rgba(0,0,0,0.6) 90%,rgba(0,0,0,1) 100%);
		background: -ms-linear-gradient(top,  rgba(0,0,0,0.7) 0%,rgba(0,0,0,0) 10%,rgba(0,0,0,0) 70%,rgba(0,0,0,0.6) 90%,rgba(0,0,0,1) 100%);
		background: linear-gradient(to bottom,  rgba(0,0,0,0.7) 0%,rgba(0,0,0,0) 30%,rgba(0,0,0,0) 70%,rgba(0,0,0,0.6) 90%,rgba(0,0,0,1) 100%);
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b3000000', endColorstr='#000000',GradientType=0 );
		pointer-events: none;
	}

	.battle_turn{
		border: 3px solid rgba(180,180,180,1);
		min-height: 20px;
		margin: 10px;
		background-color: rgba(45,45,45,1);
		padding:15px;
	}


}
