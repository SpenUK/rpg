<div class="container">

	<h1>Battle!</h1><br>
	<h3><%# @battle.outcome %></h3>

	<div class="arena">

		<div class="foreground"></div>
		<div class="arena_shadow"></div>
		<div class="background"></div>
		<div class="far-background"></div>
	

		<div class= 'player player_1' data-char="<%= @player1.id %>">
					<h2><%= @player1.name %></h2>

					<h4><%= "#{@player1.current_hp}/#{@player1.max_hp}" %></h4>
					<h4><%= "#{@player1.current_mp}/#{@player1.max_mp}" %></h4>

		</div>

		<div class= 'player player_2' data-char="<%= @player2.id %>">
					<h2><%= @player2.name %></h2>

						<h4><%= "#{@player2.current_hp}/#{@player2.max_hp}" %></h4>
						<h4><%= "#{@player2.current_mp}/#{@player2.max_mp}" %></h4>
		</div>

		<div class="skills_panel">
			<p><strong>Skills:</strong>| <% current_char.attacks.each do |att| %>
				<%= link_to attack_url(att.id, ch: @player2.id), method: :post do %>
					<%= att.name %>
				<% end %> | 
			<% end %></p>
		</div>

		<% if @battle.winner %>
			<div class="outcome">

				<h1><%= @battle.outcome %></h1>

				<%= link_to battle_session_path(current_char.battle_session.id), method: :delete, class: "button" do %><div>
						<h4>Leave</h4>
				</div><% end %>
				

			</div>
		<% end %>
		
	</div>

	<div class="turn_container">
		<% @battle.turns.each do |turn| %>

			<%= render "turn_display", turn: turn, current: @player1, opponent: @player2 %>

		<% end %>
	</div>






</div>