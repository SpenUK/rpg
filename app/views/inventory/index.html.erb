<%= render partial: 'equipped_panel' %>

<div class="container">
	<div class="draggable"></div>

	<div class="inventory_intro">

		<h1>Inventory</h1>

	</div>

	<div class="inventory_container">
	
		<% @items.each do |item| %>

			<div class="item_card <%= "equipped" if current_char.equipped_item_ids.include?(item.id) %>" data-category="<%= item.type.downcase %>">
				<div class="item_front">
					<h3><%= item.name %></h3>
					<%= link_to image_tag(item.image_url, data: {id: item.id, name: item.name, type: item.type.downcase}, class: "item_image_tag"), item_path(item.id) , data: {name: item.name, type: item.type.downcase, image: item.image_url, desc: item.description}, class: "item_image" %>
					<div class="item_description">
						<p><%= item.description %></p>
					</div>
				</div>

			</div>
		<% end %>
	
	</div>
</div>