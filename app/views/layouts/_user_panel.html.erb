<div class="user_panel">

  <% if !current_char %>

    <div class="avatar_display">
      <%= image_tag "characters/charasmall_blank.png" %>
    </div>
    <div class="character_level_details">
      <p><strong>You don't have any Characters!</strong></p>
      <p> <%= link_to "Create New Character", new_character_path, {class: "selection_p"} %></p>
    </div>


  <% else %>

	  <div class="avatar_display">
  	 <%= image_tag current_char.avatar_url %>   
    </div><!--
    --><div class="character_level_details">

      <h2><%= current_char.name %></h2>
      <p><%= link_to "(Select Another)", root_path, {class: "selection_p"} %></p>

      <p>Class: Beginner</p>
      <p>Level: <%= current_char.level %></p>

   

      <p>Exp: <%= current_char.exp %></p>
      <p>Next Level: <%= level_exp(current_char.level) - current_char.exp %></p>


    </div>

    <%= render "layouts/stats_update" %>
  	<% end %>


  





</div>