<!DOCTYPE html>
<html>
<head>
  <title>FightyTest</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="lightbox" data-content="<%= @splash if @splash %>">
<div class="lightbox_dim"></div>
  <%= (render partial: 'layouts/splash') if @splash == "login" %>
  <%= (render partial: 'layouts/world_splash') if @splash == "world" %>
</div>

<%= render partial: 'layouts/header' %>

<div class="page_wrap">

<%= render partial: 'layouts/flash' %>  


  <%= yield %>


<%= render partial: 'layouts/footer' %>
</div>

</body>
</html>