<div class="container">

	<div class="alert_container">
			<span><div class="alert_body">				
			</div></span>
		</div>


	<% flash.each do |type, message| %>
	<script type="text/javascript">
		var message = "<%= raw message %>";
		var type = "<%= raw flash_class type %>";

		$(document).ready(function(e){
			$.error_message(message, type, 1000);
		});
	</script>

	<% end %>

</div>